@require '../../css/includes/theme-default'
.context-menu
  position: absolute
  width 220px
  background main-dark
  box-shadow 0px 0px 3px 3px alpha(main-dark, .35)
  // border 1px solid #222
  padding 10px 0
  z-index 999
  -webkit-app-region no-drag
  &.scroll
    .context-menu-inner
      overflow-x hidden
      overflow-y scroll
.context-item
  -webkit-app-region no-drag
  position relative
  color text
  &:hover
    background #000
    color #eee
  &.disabled
    color alpha(text, .85)
    &:hover
      color #777
      background #333
      cursor not-allowed

.context-sub-text
  position absolute
  right 16px
  top 6px
  opacity .65